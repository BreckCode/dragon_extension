{
  "manifest_version": 3,
  "name": "Dragon Overlay",
  "version": "1.0",
  "description": "Shows an interactive dragon on every webpage",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["dragon-overlay.css"],
      "js": ["dragon-overlay.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["dragon-elements.svg"],
    "matches": ["<all_urls>"]
  }]
} 